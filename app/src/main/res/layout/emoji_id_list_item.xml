<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    
    <View
        android:id="@+id/match_indicator_view"
        android:layout_width="match_parent"
        android:background="#0000FF"
        android:alpha="0.3"
        android:layout_height="70dp" />

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/index_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_horizontal_margin"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:customFont="AVENIR_NEXT_LT_PRO_REGULAR" />

    <!-- height and width of this view will be set dynamically at runtime -->
    <RelativeLayout
        android:id="@+id/full_emoji_id_container_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="@dimen/common_horizontal_margin"
        android:background="@drawable/emoji_id_bg"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true">

        <HorizontalScrollView
            android:id="@+id/full_emoji_id_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TextView
                android:id="@+id/full_emoji_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:letterSpacing="0.22"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </HorizontalScrollView>

        <!-- white fader for emoji-id -->
        <View
            android:id="@+id/add_note_vw_full_emoji_id_fader"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/emoji_id_end_fader"
            android:translationZ="6dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="7dp">

            <include
                android:id="@+id/emoji_id_copied_view"
                layout="@layout/emoji_id_copied_anim_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_below="@id/full_emoji_id_container_view"
        android:id="@+id/bottom_spacer_view"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</RelativeLayout>